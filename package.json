{
    "name": "generator-micro-kube",
    "version": "0.0.0-semantically-released",
    "description": "Microservices scaffolding for Kubernetes and Ambassador",
    "homepage": "https://github.com/zotoio/generator-micro-kube",
    "author": {
        "name": "wyvern8",
        "email": "io@zotoio.io",
        "url": "https://zoto.io"
    },
    "files": [
        "generators"
    ],
    "main": "generators/index.js",
    "keywords": [
        "Kubernetes",
        "Docker",
        "Helm",
        "Ambassador",
        "Node",
        "yeoman-generator"
    ],
    "devDependencies": {
        "yeoman-test": "^1.7.0",
        "yeoman-assert": "^3.1.0",
        "nsp": "^3.2.1",
        "eslint": "^5.4.0",
        "faker": "^4.1.0",
        "prettier": "^1.11.1",
        "husky": "^0.14.3",
        "lint-staged": "^7.2.2",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-config-xo": "^0.24.2",
        "jest": "^23.5.0",
        "semantic-release": "^15.1.7",
        "commitizen": "^2.9.6",
        "cross-env": "^5.1.3",
        "cz-conventional-changelog": "^2.1.0"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "yeoman-generator": "^2.0.1",
        "chalk": "^2.1.0",
        "yosay": "^2.0.1"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "scripts": {
        "prepublishOnly": "nsp check",
        "pretest": "eslint --fix .",
        "precommit": "lint-staged",
        "test": "jest",
        "ci": "jest --coverage",
        "commit": "yarn test && ./node_modules/.bin/git-cz",
        "semantic-release": "semantic-release"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "repository": "zotoio/generator-micro-kube",
    "license": "Apache-2.0"
}
